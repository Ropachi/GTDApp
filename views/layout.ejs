<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=0.8, maximum-scale=1">
	<title>GTD app</title>
	<link rel="stylesheet" href="/css/bootstrap.css">
	<link rel="stylesheet" href="/css/gtdapp.css">
</head>

<body>
	<div id="nav">
		<div class="col-sm nav-align">
			<h1 id="title">GTD app</h1>
		</div>
		<div class="col-sm nav-align">
			<% if (loggedIn) { %>
				<a href="/">
					<span class="button">Home</span>
				</a>
				<a href="/projects">
					<span class="button">プロジェクト</span>
				</a>
				<a href="/tasks">
					<span class="button">タスク</span>
				</a>
				<a href="/users">
					<span class="button">担当者</span>
				</a>
			<% } else { %>
				<a href="/">
					<span class="button">Home</span>
				</a>
			<% } %>
		</div>

		<div class="login">
			<% if (loggedIn) { %>
			<p>Logged in as
				<a href="<%=`/users/${currentUser._id}`%>">
					<%= currentUser.name %></a>
				<span class="log-out">
					<a href="/users/logout">ログアウト</a>
				</span>
			</p>
			<%} else {%>
			<a href="/users/login">ログイン</a>
			<% } %>
		</div>
	</div>
	<div class="flashes">
		<% if (flashMessages) { %>
		<% if (flashMessages.success) { %>
		<div class="flash success">
			<%= flashMessages.success %>
		</div>
		<% } else if (flashMessages.error) { %>
		<div class="flash error">
			<%= flashMessages.error %>
		</div>
		<% } %>
		<% } %>
	</div>

	<div class="container">
		<%- body %>
	</div>

</body>

</html>
