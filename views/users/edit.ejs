<!--ユーザーに関する修正入力-->
<div class="data-form">
  <form class="form-signin" method="POST" action="<%=`/users/${user._id}/update?_method=PUT`%>">
    <h2 class="form-signin-heading">担当者情報編集:</h2>
    <label for="inputName">担当者名</label>
    <input type="text" name="name" id="inputName" class="form-control" value="<%= user.name %>" placeholder="担当者名" autofocus>
    <label for="inputEmail">メールアドレス</label>
    <input type="email" name="email" id="inputEmail" class="form-control" value="<%= user.email %>" placeholder="メールアドレス" required>
    <label for="inputPassword">パスワード(5〜10文字)</label>
    <input type="password" name="password" id="inputPassword" class="form-control" value="<%= user.password %>" placeholder="パスワード" required>
    <label for="inputSection">所属部署</label>
    <input type="text" name="section" id="inputSection" class="form-control" value="<%= user.section %>" placeholder="所属部署" required>

    <button class="btn btn-lg btn-primary btn-block" type="submit">修正完了</button>
  </form>
</div>
