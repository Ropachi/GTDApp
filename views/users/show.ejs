<!--担当者情報表示ページ-->
<h1 class="center">担当者情報:
  <%= user.name %>
</h1>

<table class="table">
  <tr>
    <th>担当者名</th>
    <td>
      <%= user.name %>
    </td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td>
      <%= user.email%>
    </td>
  </tr>
  <tr>
    <th>所属部署</th>
    <td>
      <%= user.section%>
    </td>
  </tr>

</table>

<!--担当者に関してリンク先ボタン設定-->
<div class="center">
                    <!-- ユーザーのIDを編集用ボタンに組み込む。 -->
  <a class="button" href="<%=`/users/${user._id}/edit`%>">
    担当者編集
  </a>
</div>
<div class="center">
                    <!-- ユーザーのIDを削除用ボタンに組み込む。 -->
  <a class="button" href="<%= `/users/${user._id}/delete?_method=DELETE` %>" onclick="return confirm('本当に削除して良いですか?')" a>削除</a>
</div>
<div class="center">
  <a class="button" href="/users">担当者一覧を見る。</a>
</div>
